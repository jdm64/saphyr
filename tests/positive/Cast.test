
struct Foo
{
	int a;
}

void func()
{
	@void p = new Foo;

	@Foo f = p->as(@Foo);

	int a = 10;

	auto b = a->as(bool);
}

void complex()
{
	@void p = new Foo;

	int z = p->as(@Foo).a;
}

void noOp()
{
	@Foo p = new Foo;

	int x = p->as(@Foo).a;
}

void mutCast()
{
	const int a = 4;
	const float b = 2.8;

	a->mut() = 5;
	a->mut = 7;
	b->mut = a->mut;
}

