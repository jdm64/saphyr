
double other()
{
	uint64 a = 7;
	int32 b = 3;
	int16 c = 5;

	a += c;

	return a / b;
}

int main()
{
	uint8 a = 4;
	uint b = 6;
	uint16 c = 7;
	uint32 d = 9;

	d += b + c;

	return a % b;
}

