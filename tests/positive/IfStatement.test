}

void two()
{
	int x = 0;
	if (x > 1)
		x = 3;
	else
		x = 7;
}

void three()
{
	auto x = 9;
	if (~x)
		x = 1;
	else if (x - 8)
		x = 2;
	else
		x = 3;
}

int main()
{
	one();
	two();
	three();
	return 0;
}

