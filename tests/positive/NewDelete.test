
@[4]int newArr(int val)
{
	auto p = new [4]int;
	for (int i = 0; i < 4; i++) {
		p[i] = val;
	}
	return p;
}

@[]int makeNew(int size)
{
	return new [size + 3]int;
}

void foo()
{
	auto x = makeNew(4);
	x[2] = 4;
}

void otherTypes(int size)
{
	auto a = new vec<3, int>;
	auto b = new [size]@int;
	auto c = new @(int)int;
}

int main()
{
	auto x = newArr(5);

	auto tmp = x[4];

	delete x;

	return tmp;
}

