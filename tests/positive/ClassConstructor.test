
class Empty
{
	this(int a)
	{
		a = 7;
	}
}

class MyClass
{
	struct this { int a, b; }

	this()
	{
		a = 4;
		b = 2;
	}

	@this makeNew()
	{
		return new this;
	}

	~this()
	{
		a = 3;
	}
}

int main()
{
	Empty a{1};
	MyClass b{};

	a.~this();
	b.~this();

	return 0;
}

void foo()
{
	@MyClass m = new MyClass;

	delete m;
}

========

%Empty = type { i8 }
%MyClass = type { i32, i32 }

define void @Empty_this(%Empty* %this, i32 %a) {
  %1 = alloca %Empty*
  store %Empty* %this, %Empty** %1
  %2 = alloca i32
  store i32 %a, i32* %2
  store i32 7, i32* %2
  ret void
}

define void @MyClass_this(%MyClass* %this) {
  %1 = alloca %MyClass*
  store %MyClass* %this, %MyClass** %1
  %2 = load %MyClass** %1
  %3 = getelementptr %MyClass* %2, i32 0, i32 0
  store i32 4, i32* %3
  %4 = load %MyClass** %1
  %5 = getelementptr %MyClass* %4, i32 0, i32 1
  store i32 2, i32* %5
  ret void
}

define %MyClass* @MyClass_makeNew(%MyClass* %this) {
  %1 = alloca %MyClass*
  store %MyClass* %this, %MyClass** %1
  %2 = call i8* @malloc(i64 8)
  %3 = bitcast i8* %2 to %MyClass*
  call void @MyClass_this(%MyClass* %3)
  ret %MyClass* %3
}

declare i8* @malloc(i64)

define void @MyClass_null(%MyClass* %this) {
  %1 = alloca %MyClass*
  store %MyClass* %this, %MyClass** %1
  %2 = load %MyClass** %1
  %3 = getelementptr %MyClass* %2, i32 0, i32 0
  store i32 3, i32* %3
  ret void
}

define i32 @main() {
  %a = alloca %Empty
  call void @Empty_this(%Empty* %a, i32 1)
  %b = alloca %MyClass
  call void @MyClass_this(%MyClass* %b)
  call void @MyClass_null(%MyClass* %b)
  ret i32 0
}

define void @foo() {
  %1 = call i8* @malloc(i64 8)
  %2 = bitcast i8* %1 to %MyClass*
  call void @MyClass_this(%MyClass* %2)
  %m = alloca %MyClass*
  store %MyClass* %2, %MyClass** %m
  %3 = load %MyClass** %m
  call void @MyClass_null(%MyClass* %3)
  %4 = bitcast %MyClass* %3 to i8*
  call void @free(i8* %4)
  ret void
}

declare void @free(i8*)
