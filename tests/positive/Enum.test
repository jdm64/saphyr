
enum Colors
{
	RED, ORANGE = 5, YELLOW, GREEN = 2,
	BLUE = 7, PURPLE
}

enum Dir<uint8> { N, S, E, W }

int func(Colors c)
{
	return c + Dir.S;
}

int func2()
{
	auto a = Colors.BLUE, b = Dir.S;

	auto c = a + b;

	return c;
}

int main()
{
	Colors a, b = Colors.BLUE;

	a = b.YELLOW;

	auto i = func(b);

	return i;
}

